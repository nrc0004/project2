<h1> <%= @program.name %> </h1>
<p> <%= link_to "edit", edit_program_path(@program) %> </p>

<%= link_to "Delete", @program, method: :delete, class: "delete" %>

  <h2> Description: </h2>
  <p><%= @program.details %></p>

  <h2> Exercises </h2>
  <% @program.exercises.each do |exercise| %>

  <p><%= link_to exercise.name, program_exercise_path(@program, exercise) %><p>

  <% end %>

<p> <%= link_to "Add exercise", new_program_exercise_path(@program) %> </p>
